{
  "name": "imp-poster",
  "description": "ImpPoster",
  "version": "0.1.0",
  "private": true,
  "main": "./public/electron-starter.js",
  "homepage": "./",
  "dependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron-is-dev": "^1.0.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-scripts": "2.1.5",
    "typescript": "^3.3.3333",
    "wait-on": "^3.2.0"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron . --enable-transparent-visuals --disable-gpu\"",
    "build": "react-scripts build",
    "build-electron": "electron-builder --dir",
    "dist": "npx build --x64 --macos --linux --c.extraMetadata.main=build/electron-starter.js -p always -c.mac.identity=null",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4"
  },
  "build": {
    "appId": "com.impedans.me",
    "copyright": "Copyright Â© 2019 LIGL AS",
    "productName": "ImpPoster",
    "publish": null,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icons/mac/icon.icns"
    },
    "dmg": {
      "backgroundColor": "#21212d",
      "icon": "assets/icons/mac/icon.icns",
      "title": "ImpPoster ${version}",
      "window": {
        "width": "400"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}
